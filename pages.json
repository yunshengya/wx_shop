			},
			{
				"pagePath": "pages/shop/shop",
				"text": "商城",
				"iconPath": "static/image/22.png",
				"selectedIconPath": "static/image/21.png"
			},
			{
				"pagePath": "pages/sort/sort",
				"text": "分类",
				"iconPath": "static/image/32.png",
				"selectedIconPath": "static/image/31.png"
			},
			{
				"pagePath": "pages/mine/mine",
				"text": "我的",
				"iconPath": "static/image/42.png",
				"selectedIconPath": "static/image/41.png"
			}
		]
	}
